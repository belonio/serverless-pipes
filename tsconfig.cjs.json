{
  "extends": "./tsconfig.base.json",
  "compilerOptions": {
    "lib": ["ES6", "DOM"],
    "target": "ES5",
    "module": "CommonJS",
    "moduleResolution": "node",
    "noImplicitAny": false,
    "allowSyntheticDefaultImports": true,
    "esModuleInterop": true,
    "outDir": "./lib",
    "declarationDir": "./lib/types"
  },
  "exclude": ["tests/**/*.test.ts"]
}
